<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <!-- method override looks for the ?_method=PUT or DELETE -->
    <!-- Need = so that the route is treated like HTML -->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <!-- blog[title] so it adds to the blog object for easier create syntax -->
        <div class="field">
            <label>Title</label>
            <!-- Instead of placeholder, we want value to prefill with old content-->
            <input type="text" name="blog[title]" value="<%=blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <!-- Prefills textarea with the contents of the blog -->
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <!-- could also do ui violet inverted button -->
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<%- include("partials/footer") %>